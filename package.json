{
  "name": "inventario-pixels",
  "version": "1.0.2",
  "description": "Inventario Pixels",
  "author": "Your Name <your-email@example.com>",
  "homepage": "https://github.com/your-username/inventario-pixels",
  
 "main": "./electron/main.js",
  "scripts": {
    "electron": "electron electron/main.js", 
    "package": "electron-builder", 
    "build": "ng build --configuration=production", 
    "build:electron": "ng build --configuration=production && electron electron/main.js", 
    "ng": "ng", 
    "start": "ng serve", 
    "watch": "ng build --watch --configuration development", 
    "test": "ng test", 
    "serve:ssr:inventarioPixels": "node dist/inventario-pixels/server/server.mjs"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^17.3.0",
    "@angular/cdk": "^17.3.10",
    "@angular/common": "^17.3.0",
    "@angular/compiler": "^17.3.0",
    "@angular/core": "^17.3.0",
    "@angular/forms": "^17.3.0",
    "@angular/material": "^17.3.10",
    "@angular/platform-browser": "^17.3.0",
    "@angular/platform-browser-dynamic": "^17.3.0",
    "@angular/platform-server": "^17.3.0",
    "@angular/router": "^17.3.0",
    "@angular/ssr": "^17.3.0",
    "@auth0/angular-jwt": "^5.2.0",
    "chart.js": "^4.4.7",
    "express": "^4.18.2",
    "html2pdf.js": "^0.10.2",
    "jspdf": "^2.5.2",
    "localstorage-polyfill": "^1.0.1",
    "ngx-toastr": "^19.0.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.3.0",
    "@angular/cli": "^17.3.0",
    "@angular/compiler-cli": "^17.3.0",
    "@types/express": "^4.17.17",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^18.18.0",
    "electron": "^34.1.1",
    "electron-builder": "^25.1.8",
    "jasmine-core": "~5.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.4.2"
  },
  "build": {
    "appId": "com.miempresa.inventario-pixels",
    "productName": "Pixels",
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "directories": {
      "output": "release"
    },
  
    "win": {
      "target": "nsis",
      "icon": "./src/assets/icons/ICONOPIXELS.png" 
    },
    "mac": {
      "icon": "path_to_icon.icns" 
    },
    "linux": {
      "target": "AppImage",
      "icon": "path_to_icon.png" 
    }
  }
}
